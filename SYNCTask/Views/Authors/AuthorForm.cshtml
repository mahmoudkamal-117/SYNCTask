@model SYNCTask.Models.Author
@{
    ViewBag.Title = "AuthorForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="alert alert-info">Author form</h2>
@using (Html.BeginForm("Save", "Authors"))
{
@Html.AntiForgeryToken()
@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = "autofocus",Placeholder="Author Name" })
    @Html.ValidationMessageFor(m=>m.Name)
</div>
<button type="submit" class="btn btn-primary btn-lg">Save</button>
<a class="btn btn-default btn-lg" href="@Url.Action("Index","Authors")">Cancel</a>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}